<div class="col-md-offset-2 col-md-8 jumbotron">
  <h1 class="text-center page-header">Reddit RSS Reader <small class="glyphicon glyphicon-flash"><%= link_to "Your Favorites", favorites_path, class:"btn btn-info" %></small></h1>


    <% flash.each do |key, value| %>
        <%= content_tag :div, value, class: "text-center alert alert-success" %>
    <% end %>
    <%= yield %>

<% @articles.each do |article| %>
  <h2><a href=<%=article[:content]%>><%= article[:headline] %> </a></h2>

  <%= form_for @article do |f|  %>
    <%= f.text_field :headline, :value => article[:headline], style: "display:none;" %>
    <%= f.text_field :content, :value => article[:content], style: "display:none;"  %>
    <%= f.submit "Add to Favorites", class: "btn btn-success btn-sm" %>
  <% end %>
  <br>
<% end %>
</div>